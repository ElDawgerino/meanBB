 <!DOCTYPE html>
<html>
	<head>
		<title>MeanBB</title>
		<script src="/javascripts/angularApp.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.18/angular-ui-router.min.js"></script>
		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	</head>

	<body ng-app="MeanBB">
		<div>
			<ui-view></ui-view>
		</div>

		<script type="text/ng-template" id="/home.html">
			<div>
				<div ng-repeat="discussion in discussionsList">
					<a href="#/discussion/{{discussion._id}}">{{discussion.date}} : {{discussion.title}}</a>
				</div>
				<form ng-submit="createDiscussion()">
					<input type="text" ng-model="title" placeholder="Title"></input>
					<input type="text" ng-model="text" placeholder="Text"></input>
					<button type="submit">Create discussion</button>
				</form>
			</div>
		</script>

		<script type="text/ng-template" id="/discussion.html">
			<div>
				{{discussion.date}}
				<h1>{{discussion.title}}</h1>
				<div ng-repeat="post in discussion.posts">
					{{post.text}}
				</div>
				<form ng-submit="addPost()">
					<input type="text" ng-model="text" placeholder="Text"></input>
					<button type="submit">Add post</button>
				</form>
		</script>
	</body>
</html>
